<% provide(:title, 'Blog') %>
<p id="notice"><%= notice %></p>

<h1>Welcome to my Blog</h1>

<% @posts.each do |post| %>
  <h2><%= link_to post.title, post %></h2>

  <p>
    <%= truncate post.text %>
  </p>

  <p>
   	Created: <%= time_ago_in_words post.created_at %> ago  
  </p>

<% end %>

<p>
  <%= link_to "New post", new_post_path %>
</p>
